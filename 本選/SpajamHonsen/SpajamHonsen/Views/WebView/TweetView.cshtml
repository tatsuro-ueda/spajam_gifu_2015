@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script type="text/javascript">
        $(window).load(function () {
            $.ajax({
                url: "http://spajamhonsen.azurewebsites.net/Api/TweetList/test?lan=" + get_url_vars("lan"),
                cache: false,
                async: false,
                success: function (xml) {
                    var show = "";
                    xml.forEach(function (value) {
                        xml.forEach(function (value) {
                            show += "<img src='" + value.IconURL + "' width='16' height='16'><div style='width: 600px' >" + value.TweetText + "</div><br/>";
                        });
                    });

                    $("#content").html(show);
                }
            });

        });

        function get_url_vars(res) {
            var vars = new Object, params;
            var temp_params = window.location.search.substring(1).split('&');
            for (var i = 0; i < temp_params.length; i++) {
                params = temp_params[i].split('=');
                if (params[0] == res) {
                    return params[1];
                }
            }
            if (res == "lan") {
                return "jp";
            } else {
                return "1";
            }
        }
    </script>
    <title></title>
</head>
<body>
    <div>
        <div id="content"></div>
    </div>
</body>
</html>
