@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <style type="text/css">
        <!--
        body {
            background-image: url('http://spajamhonsenstorage.blob.core.windows.net/images/bg.PNG');
        }
        -->
    </style>
    <meta name="viewport" content="width=device-width"/>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script type="text/javascript">
        $(window).load(function() {
            var lan = get_url_vars("lan");
            if (lan=="cn") {
                $("#age").html("年龄：");
                $("#sex").html("性别：");
                $("#lan").html("语言：");
            } else if (lan == "en") {
                $("#age").html("Age：");
                $("#sex").html("Sex：");
                $("#lan").html("Language：");
            } else {
                $("#age").html("年齢：");
                $("#sex").html("性別：");
                $("#lan").html("言語：");
            }
        });
        function goto() {
            location.href = "http://localhost:1337/WebView/DetailView?1=1&lan=" + get_url_vars("lan");
        }
        function get_url_vars(res) {
            var vars = new Object, params;
            var temp_params = window.location.search.substring(1).split('&');
            for (var i = 0; i < temp_params.length; i++) {
                params = temp_params[i].split('=');
                if (params[0] == res) {
                    return params[1];
                }
            }
            if (res == "lan") {
                return "jp";
            } else {
                return "1";
            }
        }
    </script>
    <title></title>
</head>
<body>
<div align="center">
    <span id="age"></span>
    <select name="example" style="width: 120px;">
        <option>00-15</option>
        <option>16-19</option>
        <option>20-29</option>
        <option>30-45</option>
        <option>46-60</option>
    </select><br><br>
    <span id="sex"></span>
    <select name="example" style="width: 120px;">
        <option>男</option>
        <option>女</option>
    </select><br><br>
    <span id="lan"></span>
    <select name="example" style="width: 120px;">
        <option value="日本語">日本語</option>
        <option value="中国語">中国語</option>
        <option value="英語">英語</option>
    </select>
</div>
<br/>
<div align="center">
    <input id="btn" type="button" value="検索" onclick="goto();" style="width: 120px;"/>
</div>
</body>
</html>
